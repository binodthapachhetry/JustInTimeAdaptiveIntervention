<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.neu.mhealth.android.wockets.library"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true" >
        <activity
            android:name="edu.neu.mhealth.android.wockets.library.activities.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        </activity>
        <activity
            android:name="edu.neu.mhealth.android.wockets.library.ema.EMAMessageActivity"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        </activity>
        <activity
            android:name="edu.neu.mhealth.android.wockets.library.ema.EMASingleChoiceActivity"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        </activity>
        <activity
            android:name="edu.neu.mhealth.android.wockets.library.ema.EMAMultiChoiceActivity"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        </activity>
        <activity
            android:name="edu.neu.mhealth.android.wockets.library.ema.EMATimePickerActivity"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.NoActionBar" >
        </activity>
        <activity
            android:name="edu.neu.mhealth.android.wockets.library.ema.EMANumberPickerActivity"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.NoActionBar" >
        </activity>
        <activity
            android:name="edu.neu.mhealth.android.wockets.library.ema.EMATextInputActivity"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.NoActionBar" >
        </activity>
        <!-- Services -->
        <service android:name="edu.neu.mhealth.android.wockets.library.services.LocationManagerService" />
        <service android:name="edu.neu.mhealth.android.wockets.library.services.UploadManagerService" />
        <service android:name="edu.neu.mhealth.android.wockets.library.services.AccelerationManagerService" />
    </application>

</manifest>