<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.neu.mhealth.android.wockets.library">


    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application android:allowBackup="true" android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
			android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".ema.EMAMessageActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait">
        </activity>
	    <activity
            android:name=".ema.EMASingleChoiceActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait">
	    </activity>
	    <activity
            android:name=".ema.EMAMultiChoiceActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait">
	    </activity>
	    <activity
            android:name=".ema.EMATimePickerActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait">
	    </activity>
        <activity
            android:name=".ema.EMANumberPickerActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ema.EMATextInputActivity"
            android:theme="@android:style/Theme.Holo.NoActionBar"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait">
        </activity>
	    <!-- Services -->
        <service android:name=".services.LocationManagerService"/>
        <service android:name=".services.UploadManagerService"/>
        <service android:name=".services.AccelerationManagerService" />

    </application>

</manifest>