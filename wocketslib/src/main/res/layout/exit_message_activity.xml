<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" style="?pageBackground">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:padding="10dp" android:orientation="vertical">
		<TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:text="Today," android:textSize="35dp" android:gravity="center_horizontal"
			style="?textSubheading" />
		<TextView android:id="@+id/totalCalories" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="1532" android:textSize="60dp"
			android:textStyle="bold" android:gravity="center_horizontal"
			android:layout_marginTop="10dp" style="?textTitle" />
		<TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:text="kCals so far." android:textSize="35dp" android:gravity="center_horizontal"
			android:layout_marginTop="10dp" style="?textSubheading" />
		<TextView android:id="@+id/estimateMsg" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="(Your estimate is about 1100)"
			android:textSize="20dp" android:gravity="center_horizontal"
			android:layout_marginTop="10dp" style="?textCallout" />
		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text=""
			android:textSize="6dp" android:gravity="center_horizontal"
			android:layout_marginTop="10dp" style="?textCallout" />
		<TextView android:id="@+id/remainingMsg" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text=""
			android:textSize="20dp" android:gravity="center_horizontal"
			android:layout_marginTop="10dp" style="?textCallout" />
		<!-- This is to move the buttons to the bottom -->
		<View android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="1" />
	</LinearLayout>
	<Button android:id="@+id/btnAllFoodSoFar" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_centerHorizontal="true"
		android:text="See all food so far today" android:layout_gravity="center"
		android:layout_marginBottom="10dp" style="?buttonRed" />
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_gravity="center">
		<Button android:id="@+id/btnBack" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_centerHorizontal="true"
			android:text="Back" android:layout_weight="1" style="?buttonBlue" />
		<Button android:id="@+id/btnDone" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:layout_centerHorizontal="true" android:text="Done" style="?buttonGreen" />
	</LinearLayout>
</LinearLayout>