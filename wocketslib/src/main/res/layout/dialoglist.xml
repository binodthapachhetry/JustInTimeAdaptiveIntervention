<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal" android:id="@+id/dialogContent"
  android:layout_width="wrap_content"
  android:layout_height="60dp">
  	<ImageView android:layout_width="40dp" android:layout_gravity="center"
  	android:layout_height="40dp" android:id="@+id/itemIcon" android:layout_marginLeft="40dp"/>
 	<TextView android:layout_width="200dp" android:layout_gravity="center" android:textSize="25dp"
  	android:layout_height="40dp" android:id="@+id/itemTitle" android:layout_marginLeft="40dp"/>
  	
</LinearLayout>
