<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" style="?pageBackground">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Your Ideas"
		android:gravity="center_horizontal" android:textSize="26dp"
		android:textStyle="bold" android:layout_marginTop="5dp" style="?textTitle" />
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Know how to make Wockets better? Have a problem? We want to hear from you!"
		android:gravity="left" android:textSize="18dp"
		android:layout_marginTop="5dp" style="?textSubheading" />
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical">
			<Button android:id="@+id/btnSendEmail" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
				android:text="Send Us an Email" android:layout_marginTop="15dp"
				android:textSize="18dp" style="?buttonGreen" />
			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="(Email is easiest for us to respond to quickly)"
				android:gravity="center_horizontal" android:textSize="10dp" 
				android:layout_marginTop="2dp" style="?textBody" />		
			<Button android:id="@+id/btnCallHotline" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
				android:text="Call Hotline" android:layout_marginTop="15dp"
				android:textSize="18dp" style="?buttonRed" />
			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:text="(Leave a detailed message and we'll get back to you)"
				android:gravity="center_horizontal" android:textSize="10dp"
				android:layout_marginTop="2dp" style="?textBody" />		
			<Button android:id="@+id/btnSendText" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
				android:text="Send Us a Text" android:layout_marginTop="15dp"
				android:textSize="18dp" style="?buttonGreen" />
			<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:text="(Text message comments must be VERY short and won't get a response from us!)"
				android:gravity="center_horizontal" android:textSize="10dp"
				android:layout_marginTop="2dp" style="?textBody" />		
			<Button android:id="@+id/btnNeverMind" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
				android:text="Never Mind" android:layout_marginTop="15dp"
				android:textSize="18dp" style="?buttonBlue" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>