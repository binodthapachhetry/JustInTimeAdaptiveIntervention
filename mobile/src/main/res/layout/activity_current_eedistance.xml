<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_energy_plot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    android:orientation="vertical"
    android:screenOrientation="portrait"
    tools:context="mhealth.neu.edu.phire.activities.CurrentEEdistance"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/currentEEplotTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currentEEtitle"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <com.github.mikephil.charting.charts.CombinedChart
                android:layout_width="159dp"
                android:layout_height="150dp"
                android:id="@+id/current_ee_barchart"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_weight="0.53">
            </com.github.mikephil.charting.charts.CombinedChart>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
            android:id="@+id/selectEEgoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/EEgoalSelect"
            android:gravity="left"
            android:textSize="15sp"
            android:paddingTop="15dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

            <TextView
            android:id="@+id/selectedEEgoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
                android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

            <NumberPicker android:id="@+id/eeGoalPicker"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
                android:layout_gravity="center_horizontal"
                android:descendantFocusability="blocksDescendants"
            android:isScrollContainer="false" />
        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/currentDistanceplotTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currentDistTitle"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <com.github.mikephil.charting.charts.CombinedChart
                android:layout_width="162dp"
                android:layout_height="150dp"
                android:id="@+id/current_dist_barchart"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_weight="0.53">
            </com.github.mikephil.charting.charts.CombinedChart>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/selectDistanceGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/DistanceGoalSelect"
                android:gravity="left"
                android:textSize="15sp"
                android:paddingTop="15dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/selectedDistanceGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <NumberPicker android:id="@+id/distGoalPicker"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:layout_weight="2"
                android:descendantFocusability="blocksDescendants"
                android:isScrollContainer="false" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Done"
        android:id="@+id/DailyDone"/>


</LinearLayout>
